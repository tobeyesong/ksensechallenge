<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/main.css" rel="stylesheet" />
    <title>Users Posts</title>
  </head>

  <body>
 

    <div class="px-4 pt-16 pb-20 bg-white sm:px-6 lg:pt-24 lg:pb-28 lg:px-8">
        <div
          class="relative max-w-lg mx-auto divide-y-2 divide-gray-200 lg:max-w-7xl"
        >
          <div>
            <h2
              class="text-3xl font-thin tracking-tight text-gray-900 sm:text-4xl"
            >
              Previous Posts
            </h2>
            <div
              class="mt-3 sm:mt-4 lg:grid lg:grid-cols-2 lg:gap-5 lg:items-center"
            ></div>
          </div>
          <div
            class="grid gap-16 pt-10 mt-6 lg:grid-cols-2 lg:gap-x-5 lg:gap-y-12 "
          > <% for(let p of posts) {%>
            <div class="p-2 ">
              <p class="text-sm text-gray-500">
                <time datetime="2020-03-16">Post #<%=p.id%></time>
              </p>
              <div href="#" class="block mt-2 ">
                <p class="text-xl font-semibold text-gray-900 underline uppercase">
                    <%=p.title%>
                </p>
                <p class="mt-3 text-base text-gray-500 capitalize indent-8">
                    <%=p.body%>
                </p>
              </div>
            </div>
            <% }%>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
